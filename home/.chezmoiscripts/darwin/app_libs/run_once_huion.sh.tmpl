#!/usr/bin/env zsh
set -eufo pipefail
IFS=$'\n\t'

{{/* differentiate between laptop and desktop */ -}}
{{ $pre := "desktop." -}}
{{ if hasPrefix "MacBook" .chezmoi.hostname -}}
{{   $pre = "laptop." -}}
{{ end -}}

source "{{ .include }}"

app="HuionTablet"

pls="com.huion.HuionTablet.plist"
src="{{ .filesDir }}/prefs/${app}/{{ $pre }}${pls}"
dst="$HOME/Library/Preferences/${pls}"

replace_lib "${src}" "${dst}" "${app}" "${pls}"

cfg="HUION_M22d.cfg"
src="{{ .filesDir }}/prefs/${app}/${cfg}"
dst="$HOME/Library/Application Support/HuionTablet/${cfg}"

replace_lib "${src}" "${dst}" "${app}" "${cfg}"
