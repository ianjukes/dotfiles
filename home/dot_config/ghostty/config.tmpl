# general
adjust-cell-height = 20%
auto-update = off
resize-overlay = always
shell-integration = zsh
shell-integration-features = cursor,sudo,title
theme = dracula

# macos specific
macos-titlebar-style = tabs

# copy+paste
clipboard-read = allow
clipboard-write = allow
copy-on-select = false

# cursor
cursor-style = bar
cursor-style-blink = true

# background
background-blur-radius = 10
background-opacity = 0.95

# text
font-family = "FiraCode Nerd Font"
font-size = 14
font-style = Regular
font-style-bold = Regular
bold-is-bright = true

# window
{{ if hasPrefix "MacBook" .chezmoi.hostname -}}
{{/* laptop dimensions */ -}}
window-width = 131
window-height = 37
window-position-x = 136
window-position-y = 53
{{ else -}}
{{/* desktop dimensions */ -}}
window-width = 150
window-height = 48
{{ end -}}
window-new-tab-position = end
window-padding-x = 15
window-padding-y = 13,9
window-step-resize = true
window-theme = dark
