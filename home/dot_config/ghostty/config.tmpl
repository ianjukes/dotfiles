# general
adjust-cell-height = 20%
macos-titlebar-style = tabs
resize-overlay = always
shell-integration-features = cursor,sudo,title
auto-update = off

# copy+paste
clipboard-read = allow
clipboard-write = allow
copy-on-select = false
selection-background = #56596b
selection-foreground = #ffffff

# cursor
cursor-color = #c7c7c7
cursor-style = bar
cursor-style-blink = true

# background
background = #282a36
background-blur-radius = 10
background-opacity = 0.95

# text
font-family = FiraCode Nerd Font
font-size = 14
font-style = Regular
font-style-bold = Regular
foreground = #eaeaea
bold-is-bright = true

# window
{{ if hasPrefix "MacBook" .chezmoi.hostname -}}
{{/* laptop dimensions */ -}}
window-width = 130
window-height = 36
{{ else -}}
{{/* desktop dimensions */ -}}
window-width = 150
window-height = 48
{{ end -}}
window-new-tab-position = end
window-padding-x = 15
window-padding-y = 13,9
window-step-resize = true
window-theme = dark

# dark colors
palette = 0=#000000
palette = 1=#ef766d
palette = 2=#88f397
palette = 3=#f4f8a7
palette = 4=#c4a9f4
palette = 5=#f297cd
palette = 6=#aceafb
palette = 7=#c7c7c7

# light colors
palette = 8=#676767
palette = 9=#ef766d
palette = 10=#88f397
palette = 11=#f4f8a7
palette = 12=#c4a9f4
palette = 13=#f297cd
palette = 14=#aceafb
palette = 15=#ffffff
